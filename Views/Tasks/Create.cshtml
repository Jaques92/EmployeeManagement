@model EmployeeManagement.DataAccess.Task

@{
    Layout = "_layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDesc" class="control-label"></label>
                <input asp-for="TaskDesc" class="form-control" />
                <span asp-validation-for="TaskDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDuration" class="control-label"></label>
                <input asp-for="TaskDuration" class="form-control" />
                <span asp-validation-for="TaskDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeIds" class="control-label"></label>

                @*@Html.DropDownList("EmployeeIds", (MultiSelectList)ViewBag.Employees, new { multiple = "multiple" })*@
                @*@Html.ListBox("EmployeeIds", (MultiSelectList)ViewBag.Employees)*@

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
